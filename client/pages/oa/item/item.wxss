.banner {
  margin: 5rpx;
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fffff0;
  width: 720rpx;
  height: 200rpx;
  color: #787878;
  box-shadow: 0 0 5px #fffff0, 0 0 15px #eaeaea;
}

.date_item {
  margin: 5rpx;
  display: flex;
  width: 99%;
  height: 50rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #FAFAFA;
  border-top: 1px solid #eaeaea;
  border-bottom: 1px solid #eaeaea;
}
.date_item text{
  font-size: 10pt;
}

.request_item {
  margin: 5rpx;
  display: flex;
  flex-direction: row;
  width: 98%;
  height: 150rpx;
  border-bottom: 1px solid #eaeaea;
}

.request_item text{
  font-size: 9pt;
}

.request_item .request_item-left image {
  display: block;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.request_item .request_item-right {
  display: flex;
  flex-direction: column;
}

.request_item .request_item-right .line1 {
  display: flex;
  flex: 1;
  flex-direction: row;
}

text {
  margin: 10rpx;
  padding: 5rpx;
}
