<view class='container'>
  <view class='banner'>
    <text>{{data.category}}</text>
  </view>

  <block wx:for="{{data.items}}" wx:key="{{id}}">
    <template is="date_item" data="{{...item}}"/>
  </block>

  <!-- <template is="request_item" />
  <template is="request_item" />
  <template is="request_item" />

  <template is="request_item" /> -->

</view>

<template name="date_item">
  <view class='date_item'>
    <view class='date_item-left'>
      <text class='catergory'>{{dateWeek.date}}</text>
    </view>
    <view class='date_item-right'>
      <text>{{dateWeek.week}}</text>
    </view>
  </view>

  <block wx:for="{{records}}" wx:key="{{id}}">
    <template is="request_item" data="{{...item}}"/>
  </block>
</template>

<template name="request_item">
  <view class='request_item' bindtap='goToDetail'>
    <view class='request_item-left'>
      <image src='../../../image/salary.png'></image>
    </view>
    <view class='request_item-right'>
      <view class='line1'>
        <text>{{name}}</text>
        <text>{{time}}</text>
        <text>{{subcategory}}</text>
      </view>
      <view class='line2'>
        <text>{{subject}}</text>
      </view>
      <view class='line3'>
        <text>{{requestid}}</text>
      </view>
    </view>
  </view>
</template>